@model Pizza
@{
    var pizza = Model;
}
<div class="d-flex justify-content-center">

    <div class="card mt-3" style="width: 20%;">
        <img src="@pizza.Foto" alt="...">
        <div>
            <h5>@pizza.Name</h5>
            <p >@pizza.Description</p>
            <p >Prezzo: @pizza.Price €</p>
            <div>La categoria della pizza è:
                @if ( pizza.Categoria != null)
                {
                    @pizza.Categoria.Name
                }else
                {
                    <span>Non classificata</span>
                }
            </div>
            <div>
                Gli ngredienti sono:
                @foreach (Ingrediente ingrediente in pizza.Ingredients)
                {
                    <ul>
                        <li>
                            @ingrediente.Name
                        </li>
                    </ul>
                }
            </div>

            <a href="@Url.Action("Index", "Pizza")" class="btn btn-primary">Torna alla Home</a>
        </div>
    </div>
</div>
